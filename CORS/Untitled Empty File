header("Access-Control-Allow-Origin: *");
header("Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS, PROPFIND");
header("Access-Control-Allow-Headers: Authorization, Origin, X-Requested-With, accept, depth, Content-Type");
header("Access-Control-Allow-Credentials: true");


// Handling the Preflight
if ($_SERVER['REQUEST_METHOD'] == 'OPTIONS') {
    exit;
}

